@model beltexam3.Models.Song

@{
    ViewData["Title"] = "Add Song";
    ViewData["NavBar"] = false;
}

<h2>Add a Song:</h2>

<form asp-action="Add" class="add-song-page">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Artist"></label>
        <div>
            <input asp-for="Artist" />
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <div>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Add Song" class="add-song-button" />
        </div>
    </div>
</form>